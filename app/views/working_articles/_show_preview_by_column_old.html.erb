<div class="col-xs-12 col-lg-12">
  <% if @working_article.column == 1 %>
    <div class="col-xs-12 col-lg-9"></div>
    <div class="col-xs-12 col-lg-3"><%= render 'show_preview', article: @working_article %>
    </div>
  <% elsif @working_article.column == 2 %>
    <div class="col-xs-12 col-lg-7"></div>
    <div class="col-xs-12 col-lg-5"><%= render 'show_preview', article: @working_article %>
    </div>
  <% elsif @working_article.column == 3 %>
    <div class="col-xs-12 col-lg-5"></div>
    <div class="col-xs-12 col-lg-7"><%= render 'show_preview', article: @working_article %>
    </div>
  <% elsif @working_article.column == 4 %>
    <div class="col-xs-12 col-lg-3"></div>
    <div class="col-xs-12 col-lg-9"><%= render 'show_preview', article: @working_article %>
    </div>
  <% elsif @working_article.column == 5 %>
    <div class="col-xs-12 col-lg-2"></div>
    <div class="col-xs-12 col-lg-10"><%= render 'show_preview', article: @working_article %>
    </div>
  <% elsif @working_article.column == 6 %>
    <div class="col-xs-12 col-lg-12"><%= render 'show_preview', article: @working_article %>
    </div>
  <% else @working_article.column == 7 %>
    <div class="col-xs-12 col-lg-12"><%= render 'show_preview', article: @working_article %>
    </div>
  <% end %>
</div>
