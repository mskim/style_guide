<div class="container">
  <h3 class="text-center">연합기사</h3>
  <div class="" id="yh_article_search">
    <%= render 'search_form' %>
  </div>
</div>
<div class="row">
  <div class="col-md-7" id="search_result">
    <table class="table table-bordered">
      <thead class="text-center">
        <tr>
          <th scope="col">작성</th>
          <th scope="col">제목</th>
          <th scope="col">분류</th>
          <th scope="col">발행시간</th>
        </tr>
      </thead>
      <tbody>
        <% @yh_articles.each do |article| %>
          <tr>
            <td class="text-center">
              <%= link_to edit_yh_article_path(article) do %>
                <i class="fa fa-pencil-square icon-color" aria-hidden="true" style="font-size: 25px;"></i>
              <% end %>
            </td>
            <td>
              <%= link_to article.title, article, remote: true %>
            </td>
            <td class="text-center">
              <%= eval(article.category)[:name] %>
            </td>
            <td class="text-center">
              <%= article.created_at.strftime("%m-%d %H:%M") %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @yh_articles, theme: 'twitter-bootstrap-4', pagination_class: "justify-content-center" %>
  </div>
  <div class="col-md-5" id="article_preview">
    <%= render "article_preview" %>
  </div>
</div>
