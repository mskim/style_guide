<%= form_for(reporter_image) do |f| %>
  <% if reporter_image.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(reporter_image.errors.count, "error") %> prohibited this image from being saved:</h2>
      <ul>
        <% reporter_image.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group row">
    <%= f.label "제목:", class: "col-form-label" %>
    <div class="col">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "캡션 설명:", class: "col-form-label" %>
    <%= f.text_area :caption, class: "form-control", style: "height: 400px;" %>
  </div>
  <div class="form-group">
    <%= f.label "출처:" %>
    <%= f.text_field :source, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :섹션이름 %>
    <%= f.select :section_name, %w[1면 정치 자치행정 국제통일 금융 산업 정책 기획 오피니언], {include_blank: true} %>
  </div>
  <div class="actions">
    <%= f.submit "저장" %>
  </div>
<% end %>
